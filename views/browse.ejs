<!-- browse.ejs -->

<%- include("./partials/head") %>

<body>
  <h3>Items</h3>
    <button onclick="location.href='/create'">Add Item</button>
  <ul>
  <% items.forEach(item => { %>
    <li>
      <h3><%=item.itemname%></h3>
      <h3>Inventory: <%= item.inventory%></h3>
      <button onclick="location.href='/item/<%= item.itemid %>'">Update</button>
      <form action="/item/<%= item.itemid %>/delete" method="post" style="display:inline;">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
      </form>
    </li>
    <% }); %>
  </ul>
</body>

<%- include("./partials/footer") %>