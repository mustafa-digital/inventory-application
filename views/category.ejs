<!-- category.ejs -->

<%- include("./partials/head") %>

<body>
  <h1>Browsing by Category</h1>
  <ul>
    <!-- list the categories here as links to /category/:categoryName -->
     <% categories.forEach(category => { %>
      <a href="/category/<%= category.categoryname.toLowerCase() %>">
        <li>
          <%= category.categoryname %>  
        </li>
      </a>
      <% }); %>           
  </ul>
  <a href="/">Back to home</a>
</body>

